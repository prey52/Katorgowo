<link rel="stylesheet" href="~/css/ListaOgloszen.css" />

@model IEnumerable<Katorgowo.Models.OfertyPracyModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<div>
    <form>
        <input type="text" placeholder="Znajdź pracę marzeń"/>
        <select>
            <option>Kategoria</option>
        </select>
        <select>
            <option>Wymiar pracy</option>
        </select>
        <select>
            <option>Umowa</option>
        </select>
        <input type="text">Miasto</input>
    </form>
</div>
<div>
    <form>
        <input type="text" value="Najnowsze"/>
        <select>
            <option>Sortuj</option>
        </select>
    </form>
</div>

@foreach (var item in Model)
{
    <div>
        <div>
            @Html.DisplayFor(modelItem => item.RodzajUmowy)
            @Html.DisplayFor(modelItem => item.WymiarPracy)
            @Html.DisplayFor(modelItem => item.DataPublikacji)
        </div>
        <div>
            <div>
                <input type="image" src="~/images.jpg" />
            </div>
            <div>
                @Html.DisplayFor(modelItem => item.Tytuł)
                @Html.DisplayFor(modelItem => item.Wynagrodzenie)
                <p>Nazwa firmy</p>
            </div>
        </div>
        <div>
            <p>Miasto(Województwo)</p>
        </div>
    </div>
    <a asp-action="Ogloszenie" asp-route-id="@item.Id">Szczegóły oferty</a>
}